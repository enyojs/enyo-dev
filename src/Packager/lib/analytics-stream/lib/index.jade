include mixins

doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='x-ua-compatible', content='ie=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title= package
		each stylesheet in stylesheets
			style!= stylesheet.contents
	body
		// this output is automatically generated by the enyo-dev/analytics output stream
		#header
			.menu
				h1.title #{package} #[span.meta #[em #{library ? 'library' : ''}]] #[span.meta | #{build}]
				ul.menu
					li: a.nav(href='#overview') overview
					li: a.nav(href='#bundles') bundles
					li: a.nav(href='#modules') modules
					li: a.nav(href='#styles') styles
					li: a.nav(href='#assets') assets
			.search
				input(type='text',id='search',placeholder='search')
				.info.
					Use this search field to find modules or bundles by name.
		#main
			#overview.section
				a(name='overview')
				h1 Overview
				p.
					This table describes the generic statistics that can be observed from this #{build} build
					of the #{package}#{library ? ' library' : ''}.
				.table.stats
					table
						thead
							tr
								td
								td count
								td size*
						tbody
							tr
								td bundles
								td= bundles.length
								td 0
							tr
								td modules
								td= modules.length
								td 0
							tr
								td styles
								td 0
								td 0
							tr
								td assets
								td 0
								td 0
							tr
								td(colspan=2) total size
								td 0
				.graph.stats
			#bundles.section
				a(name='bundles')
				h1 Bundles
				ul.columns
					for bundle in bundles
						li: +bundleLink(bundle.name)
				.content
					for bundle in bundles
						+bundleSection(bundle)
			#modules.section
				a(name='moduled')
				h1 Modules
				ul
					for bundle in bundles
						li
							h3: +bundleLink(bundle.name)
							ul.columns
								for module in bundle.modules
									li: +moduleLink(module.name)
				.content
					for module in modules
						+moduleSection(module)


		each script in scripts
			if script.src
				script(src=script.src)
			else
				script!= script.contents